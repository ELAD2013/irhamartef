    <script>
        // ××¦×‘ ×”×¢×™×¨ (××“××” ×‘×¡×™×¡ × ×ª×•× ×™× ××©×•×ª×£)
        let cityStatus = {
            isOpen: false,
            lastUpdate: new Date().toLocaleString('he-IL')
        };

        // ××œ×× ×˜×™×
        const statusCard = document.getElementById('statusCard');
        const statusIcon = document.getElementById('statusIcon');
        const statusText = document.getElementById('statusText');
        const lastUpdate = document.getElementById('lastUpdate');
        const adminBtn = document.getElementById('adminBtn');
        const adminPanel = document.getElementById('adminPanel');
        const codeInput = document.getElementById('codeInput');
        const adminControls = document.getElementById('adminControls');
        const accessCode = document.getElementById('accessCode');
        const verifyCode = document.getElementById('verifyCode');
        const openCity = document.getElementById('openCity');
        const closeCity = document.getElementById('closeCity');
        const logoutAdmin = document.getElementById('logoutAdmin');
        const notifications = document.getElementById('notifications');

        // ×§×•×“ ×”×’×™×©×”
        const ADMIN_CODE = '112233';

        // ×¤×•× ×§×¦×™×” ×œ×”×¦×’×ª ×”×•×“×¢×•×ª
        function showNotification(message, type = 'info') {
            const notification = document.createElement('div');
            const colors = {
                success: 'bg-green-500',
                error: 'bg-red-500',
                info: 'bg-blue-500'
            };
            
            notification.className = `${colors[type]} text-white px-6 py-3 rounded-lg shadow-lg mb-2 transform transition-all duration-300 translate-x-full`;
            notification.textContent = message;
            
            notifications.appendChild(notification);
            
            // ×× ×™××¦×™×” ×©×œ ×›× ×™×¡×”
            setTimeout(() => {
                notification.classList.remove('translate-x-full');
            }, 100);
            
            // ×”×¡×¨×” ××•×˜×•××˜×™×ª
            setTimeout(() => {
                notification.classList.add('translate-x-full');
                setTimeout(() => {
                    if (notification.parentNode) {
                        notification.parentNode.removeChild(notification);
                    }
                }, 300);
            }, 3000);
        }

        // ×¢×“×›×•×Ÿ ×ª×¦×•×’×ª ×”×¡×˜×˜×•×¡
        function updateStatusDisplay() {
            if (cityStatus.isOpen) {
                statusCard.className = 'status-open rounded-3xl p-8 text-center shadow-2xl transform transition-all duration-500';
                statusIcon.textContent = 'ğŸ”“';
                statusText.textContent = '×¤×ª×•×—×”';
            } else {
                statusCard.className = 'status-closed rounded-3xl p-8 text-center shadow-2xl transform transition-all duration-500';
                statusIcon.textContent = 'ğŸ”’';
                statusText.textContent = '×¡×’×•×¨×”';
            }
            
            lastUpdate.textContent = cityStatus.lastUpdate;
            
            // ××¤×§×˜ ×¤×¢×™××” ×œ×¢×“×›×•×Ÿ
            statusCard.classList.add('pulse-animation');
            setTimeout(() => {
                statusCard.classList.remove('pulse-animation');
            }, 1000);
        }

        // ×¢×¨×•×¥ ×ª×§×©×•×¨×ª ×‘×–××Ÿ ×××ª
        const statusChannel = new BroadcastChannel('cityStatusRealTime');
        let isUpdating = false;

        // ×©×™× ×•×™ ×¡×˜×˜×•×¡ ×”×¢×™×¨
        function changeCityStatus(isOpen) {
            if (isUpdating) return; // ×× ×™×¢×ª ×œ×•×œ××•×ª ×¢×“×›×•×Ÿ
            
            cityStatus.isOpen = isOpen;
            cityStatus.lastUpdate = new Date().toLocaleString('he-IL');
            cityStatus.updateId = Date.now(); // ××–×”×” ×™×™×—×•×“×™ ×œ×¢×“×›×•×Ÿ
            
            // ×©××™×¨×” ××§×•××™×ª
            localStorage.setItem('cityStatus', JSON.stringify(cityStatus));
            
            updateStatusDisplay();
            
            const message = isOpen ? 'ğŸ”“ ×”×¢×™×¨ × ×¤×ª×—×” ×‘×”×¦×œ×—×”!' : 'ğŸ”’ ×”×¢×™×¨ × ×¡×’×¨×” ×‘×”×¦×œ×—×”!';
            showNotification(message, 'success');
            
            // ×©×™×“×•×¨ ××™×™×“×™ ×œ×›×œ ×”×˜××‘×™× ×•×”××›×©×™×¨×™×
            broadcastStatusChange();
        }

        // ×©×™×“×•×¨ ×©×™× ×•×™×™× ×‘×–××Ÿ ×××ª
        function broadcastStatusChange() {
            // ×©×™×“×•×¨ ×œ×˜××‘×™× ×‘××•×ª×• ×“×¤×“×¤×Ÿ
            statusChannel.postMessage({
                type: 'statusUpdate',
                data: cityStatus,
                timestamp: Date.now()
            });
            
            // ×©×™×“×•×¨ ×’×œ×•×‘×œ×™ (××“××” ×©×¨×ª)
            simulateServerBroadcast();
        }

        // ××“××” ×©×™×“×•×¨ ×©×¨×ª ×œ×›×œ ×”××›×©×™×¨×™×
        function simulateServerBroadcast() {
            // ×©××™×¨×” ×¢× ×—×•×ª××ª ×–××Ÿ ×œ×–×™×”×•×™ ×¢×“×›×•× ×™× ×—×“×©×™×
            const globalStatus = {
                ...cityStatus,
                globalUpdateTime: Date.now()
            };
            localStorage.setItem('globalCityStatus', JSON.stringify(globalStatus));
            
            // ×™×¦×™×¨×ª ××™×¨×•×¢ ××•×ª×× ××™×©×™×ª
            window.dispatchEvent(new CustomEvent('cityStatusGlobalUpdate', {
                detail: globalStatus
            }));
        }

        // ×”××–× ×” ×œ×¢×“×›×•× ×™× ×‘×–××Ÿ ×××ª
        function listenForStatusChanges() {
            // ×”××–× ×” ×œ×˜××‘×™× ×‘××•×ª×• ×“×¤×“×¤×Ÿ
            statusChannel.onmessage = (event) => {
                if (event.data.type === 'statusUpdate') {
                    isUpdating = true;
                    cityStatus = event.data.data;
                    updateStatusDisplay();
                    showNotification('ğŸ“± ×¢×•×“×›×Ÿ ××˜××‘ ××—×¨', 'info');
                    setTimeout(() => { isUpdating = false; }, 100);
                }
            };
            
            // ×”××–× ×” ×œ×¢×“×›×•× ×™× ×’×œ×•×‘×œ×™×™× (××“××” ×¢×“×›×•× ×™× ×××›×©×™×¨×™× ××—×¨×™×)
            window.addEventListener('cityStatusGlobalUpdate', (event) => {
                if (!isUpdating && event.detail.updateId !== cityStatus.updateId) {
                    isUpdating = true;
                    cityStatus = event.detail;
                    updateStatusDisplay();
                    showNotification('ğŸŒ ×¢×•×“×›×Ÿ ×××›×©×™×¨ ××—×¨', 'info');
                    setTimeout(() => { isUpdating = false; }, 100);
                }
            });
            
            // ×‘×“×™×§×” ×ª×§×•×¤×ª×™×ª ×œ×¢×“×›×•× ×™× (××“××” polling ×œ×©×¨×ª)
            setInterval(checkForGlobalUpdates, 2000);
        }

        // ×‘×“×™×§×ª ×¢×“×›×•× ×™× ×’×œ×•×‘×œ×™×™×
        function checkForGlobalUpdates() {
            const globalStatus = localStorage.getItem('globalCityStatus');
            if (globalStatus) {
                const parsed = JSON.parse(globalStatus);
                if (parsed.globalUpdateTime > (cityStatus.globalUpdateTime || 0) && 
                    parsed.updateId !== cityStatus.updateId && !isUpdating) {
                    
                    isUpdating = true;
                    cityStatus = parsed;
                    updateStatusDisplay();
                    showNotification('ğŸ”„ ×¡×•× ×›×¨×Ÿ ×¢× ×”××¢×¨×›×ª', 'info');
                    setTimeout(() => { isUpdating = false; }, 100);
                }
            }
        }

        // ×˜×¢×™× ×ª ×¡×˜×˜×•×¡ ××”×–×™×›×¨×•×Ÿ
        function loadStatus() {
            const saved = localStorage.getItem('cityStatus');
            if (saved) {
                cityStatus = JSON.parse(saved);
            }
            updateStatusDisplay();
        }

        // ××™×¨×•×¢×™ ×œ×—×™×¦×”
        adminBtn.addEventListener('click', () => {
            adminPanel.classList.toggle('hidden');
            if (!adminPanel.classList.contains('hidden')) {
                accessCode.focus();
            }
        });

        verifyCode.addEventListener('click', () => {
            if (accessCode.value === ADMIN_CODE) {
                codeInput.classList.add('hidden');
                adminControls.classList.remove('hidden');
                showNotification('âœ… ×’×™×©×” ×××•×©×¨×ª ×‘×”×¦×œ×—×”!', 'success');
                accessCode.value = '';
            } else {
                showNotification('âŒ ×§×•×“ ×©×’×•×™! × ×¡×” ×©×•×‘', 'error');
                accessCode.value = '';
                accessCode.focus();
            }
        });

        // Enter key ×œ××™××•×ª ×§×•×“
        accessCode.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                verifyCode.click();
            }
        });

        openCity.addEventListener('click', () => {
            changeCityStatus(true);
        });

        closeCity.addEventListener('click', () => {
            changeCityStatus(false);
        });

        logoutAdmin.addEventListener('click', () => {
            adminControls.classList.add('hidden');
            codeInput.classList.remove('hidden');
            adminPanel.classList.add('hidden');
            showNotification('ğŸšª ×™×¦××ª ××œ×•×— ×”×‘×§×¨×”', 'info');
        });

        // ×¢×“×›×•×Ÿ ×–××Ÿ ×›×œ ×“×§×”
        setInterval(() => {
            if (cityStatus.lastUpdate) {
                // ×¢×“×›×•×Ÿ ×”×ª×¦×•×’×” ×× ×¢×‘×¨ ×–××Ÿ ×¨×‘
                const now = new Date();
                const lastUpdateTime = new Date(cityStatus.lastUpdate);
                const diffMinutes = Math.floor((now - lastUpdateTime) / (1000 * 60));
                
                if (diffMinutes > 0) {
                    lastUpdate.textContent = cityStatus.lastUpdate + ` (×œ×¤× ×™ ${diffMinutes} ×“×§×•×ª)`;
                }
            }
        }, 60000);

        // ××ª×—×•×œ
        loadStatus();
        listenForStatusChanges();
        
        // ×”×•×“×¢×ª ×‘×¨×•×›×™× ×”×‘××™×
        setTimeout(() => {
            showNotification('ğŸ° ×‘×¨×•×›×™× ×”×‘××™× ×œ×¢×™×¨ ×”××¨×ª×£!', 'info');
        }, 500);
    </script>
